{
	"name": "@morev/stylelint-config",
	"description": "Strict shareable Stylelint configuration that I personally use",
	"version": "4.0.0",
	"private": false,
	"engines": {
		"node": "^12.20.0 || ^14.13.1 || ^15.0.0 || >=16.0.0 || >=18.0.0"
	},
	"license": "MIT",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"author": {
		"name": "Maxim Morev",
		"email": "max.seainside@gmail.com"
	},
	"homepage": "https://github.com/MorevM/stylelint-config#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/MorevM/stylelint-config"
	},
	"keywords": [
		"stylelint",
		"stylelintconfig",
		"config",
		"codestyle",
		"more"
	],
	"files": [
		"build"
	],
	"exports": {
		".": "./build/configurations/scss.js",
		"./css": "./build/configurations/css.js",
		"./css/strict": "./build/configurations/css-strict.js",
		"./css/quiet": "./build/configurations/css-quiet.js",
		"./scss": "./build/configurations/scss.js",
		"./scss/strict": "./build/configurations/scss-strict.js",
		"./scss/quiet": "./build/configurations/scss-quiet.js"
	},
	"main": "./build/configurations/scss.js",
	"scripts": {
		"prepare": "lefthook install",
		"vscode-settings": "cp .vscode/settings.template.json .vscode/settings.json",
		"build": "node utils/build.js",
		"test": "jest",
		"lint": "eslint \"**/*.{js,json,json5,jsonc,yml,yaml}\"",
		"lint:fix": "eslint \"**/*.{js,json,json5,jsonc,yml,yaml}\" --fix",
		"release": "release-it --disable-metrics"
	},
	"peerDependencies": {
		"stylelint": "^16.0.0"
	},
	"dependencies": {
		"lodash.mergewith": "^4.6.2",
		"postcss": "^8.4.33",
		"postcss-scss": "^4.0.9",
		"stylelint-8-point-grid": "^2.2.0",
		"stylelint-at-rule-no-children": "^0.3.1",
		"stylelint-declaration-block-no-ignored-properties": "^2.8.0",
		"stylelint-high-performance-animation": "^1.10.0",
		"stylelint-no-nested-media": "^0.1.0",
		"stylelint-order": "^6.0.4",
		"stylelint-scss": "^6.1.0",
		"stylelint-selector-no-empty": "^1.0.9",
		"stylelint-selector-tag-no-without-class": "^2.0.6",
		"stylelint-stylistic": "^0.4.3",
		"stylelint-use-nesting": "^4.1.0"
	},
	"devDependencies": {
		"@morev/commitlint-config": "^0.2.2",
		"@morev/eslint-config": "^24.5.0",
		"@release-it/conventional-changelog": "^7.0.2",
		"@types/jest": "^29.5.11",
		"eslint": "^8.56.0",
		"jest": "^29.7.0",
		"lefthook": "^1.5.6",
		"release-it": "^16.3.0",
		"stylelint": "^15.11.0",
		"stylelint-find-new-rules": "^4.1.2"
	}
}
